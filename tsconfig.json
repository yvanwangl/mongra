{
    "compileOnSave": true,
    "compilerOptions": {
      "declaration": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": ".",
      "sourceMap": true,
      "inlineSources": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }